<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="8dp">

        <!-- Order Status and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Delivery Icon -->
            <ImageView
                android:id="@+id/img_delivery_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Delivery Status Icon" />

            <!-- Delivery Status -->
            <TextView
                android:id="@+id/tv_delivery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>

            <!-- Order Date -->
            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/10/2024"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Product Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:contentDescription="Product Image"/>

            <!-- Product Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:layout_weight="1">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <!-- Quantity -->
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: 1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Order Info -->
        <TextView
            android:id="@+id/tv_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #216358502434489"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/tv_tracking_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracking # LK-DM-DEX-013025048"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
